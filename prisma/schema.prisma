generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  role  String?
}

model client {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  email       String         @unique
  phone       String         @unique
  reviews     reviews[]
  appoinments appointments[]
}

model therapists {
  id                             String         @id @default(auto()) @map("_id") @db.ObjectId
  userId                         String         @unique
  email                          String         @unique
  name                           String
  phone                          String
  dob                            String?
  location                       String
  verified                       Boolean        @default(false)
  registrationNumber             String
  degree                         String
  experience                     String
  specialization                 String
  meetDuration                   String
  sessionCost                    String
  sessionMode                    String
  timeSlots                      String[]
  RCI_document                   String
  Malpractice_Insurance_document String?
  profilePic                     String
  bio                            String
  languages                      String[]
  stars                          Int            @default(0)
  reviews                        reviews[]
  appointments                   appointments[]
  services                       services[]
  blogs                          blogs[]
}

model reviews {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  description String
  stars       Int
  therapistId String     @db.ObjectId
  therapist   therapists @relation(fields: [therapistId], references: [id])
  client      client?    @relation(fields: [clientId], references: [id])
  clientId    String?    @db.ObjectId
}

model appointments {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  date        String
  startTime   String?
  confirmed   Boolean?
  cost        String
  duration    String
  mode        String
  payment     Boolean?
  therapistId String     @db.ObjectId
  therapist   therapists @relation(fields: [therapistId], references: [id])
  client      client?    @relation(fields: [clientId], references: [id])
  clientId    String?    @db.ObjectId
}

model services {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  therapistId     String     @db.ObjectId
  therapist       therapists @relation(fields: [therapistId], references: [id])
  meetingType     String
  meetingDuration String
  meetingCost     String
}

model blogs {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  url         String?    @unique
  title       String
  author      String
  authorId    String     @db.ObjectId
  therapist   therapists @relation(fields: [authorId], references: [id])
  status      String
  bio         String
  tags        String[]
  bannerImage String
  content     String
  createdAt   DateTime   @default(now()) @map("created_at")
}
